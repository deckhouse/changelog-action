{
	"compilerOptions": {
		"target": "es2015",
		"module": "CommonJS",
		"lib": ["es6"],
		"outDir": "./lib",
		"rootDir": "./src",
		"declaration": false,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["__test__", "lib", "node_modules", "**/*.test.ts"]
}
