{
	"compilerOptions": {
		"target": "ESNext",
		"module": "system",
		"lib": ["es6"],
		// "outDir": "./lib",
		"outFile": "./dist/index.js",
		"rootDir": "./src",
		"declaration": false,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["__test__", "lib", "node_modules", "**/*.test.ts"]
}
